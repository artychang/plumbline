{
  "name": "plumbline",
  "version": "10.0.9",
  "description": "Angular component testing utility for simplistic shallow mounted unit testing",
  "author": "https://github.com/artychang/plumbline/graphs/contributors",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "test": "ng test",
    "lint": "ng lint",
    "build": "npm run clean && tsc",
    "build:release": "npm run build && npm run lint && npm run test",
    "versionDistrib": "git push && git push --tags",
    "versionBumpPA": "npm version patch && npm run versionDistrib && echo 'To publish:\nnpm publish'",
    "versionBumpMI": "npm version minor && npm run versionDistrib && echo 'To publish:\nnpm publish'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/artychang/plumbline.git"
  },
  "bugs": {
    "url": "git+https://github.com/artychang/plumbline/issues"
  },
  "keywords": [
    "enzyme",
    "javascript",
    "shallow rendering",
    "shallowRender",
    "mock",
    "shallow",
    "test",
    "angular",
    "components",
    "testing",
    "test utils",
    "assertion helpers",
    "tdd"
  ],
  "typescript": {
    "definition": "dist/index"
  },
  "peerDependencies": {
    "@angular/common": "10.x",
    "@angular/compiler": "10.x",
    "@angular/core": "10.x",
    "@angular/forms": "10.x",
    "@angular/platform-browser": "10.x",
    "ng-mocks": "10.x",
    "zone.js": "0.10.x"
  },
  "typings": "dist/index",
  "license": "MIT",
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1002.3",
    "@angular/animations": "10.x",
    "@angular/cli": "10.x",
    "@angular/common": "10.x",
    "@angular/compiler": "10.x",
    "@angular/compiler-cli": "10.x",
    "@angular/core": "10.x",
    "@angular/forms": "10.x",
    "@angular/platform-browser": "10.x",
    "@angular/platform-browser-dynamic": "10.x",
    "@angular/router": "10.x",
    "@types/jasmine": "^2.8.8",
    "@types/lodash": "^4.14.96",
    "classlist.js": "^1.1.20150312",
    "codelyzer": "^6.0.1",
    "jasmine-core": "^3.1.0",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^2.0.1",
    "karma-htmlfile-reporter": "^0.3.5",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^1.1.0",
    "karma-junit-reporter": "^1.2.0",
    "ng-mocks": "^10.5.4",
    "primeng": "6.1.7",
    "rxjs": "^6.6.3",
    "ts-node": "^6.1.1",
    "tslint": "^5.11.0",
    "typescript": "^3.9.7",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.10.3"
  }
}
